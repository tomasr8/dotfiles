{
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.enablePreview": false,
    "editor.fontSize": 16,
    "editor.fontFamily": "Consolas, 'Monaco', monospace",
    "workbench.colorTheme": "Atom One Dark",
    "terminal.integrated.scrollback": 10000,
    "javascript.updateImportsOnFileMove.enabled": "always",

    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "variable.other.object.js",
                "settings": {
                    "foreground": "#E5C07B"
                }
            },
            {
                "scope": "variable.parameter.js",
                "settings": {
                    "foreground": "#56B6C2"
                }
            }
        ]
    },
    "vscode_custom_css.imports": [
        "file:///home/tomas/Desktop/dotfiles/purple.css"
    ],
    "window.titleBarStyle": "custom",

    "files.exclude": {
        "**/.cache": true,
        "**/.pytest_cache": true,
        "**/*.egg-info": true,
        "**/__pycache__": true,
        "**/static/dist": true,
        "**/docs/build": true
    },

    "search.exclude": {
        "indico/indico/translations/": true,
        "indico/indico/web/static/fonts/": true
    }
}
